<div class="new-songs-wrapper" ng-controller="songsCtrl">
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
<nav class="navbar navbar-default navimage">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="header-container navbar-header">
      <div class="left">
        <a class="navbar-brand header-image " href="/songs"><img class="headerimage" src="/assets/notebook-header-icon.png"></a>
      </div>
      <div class="middle">
        <div class="tape">
          <h2>Song Details</h2>
        </div>
      </div>
      <div style="clear:both;"></div>
    </div>

  </div><!-- /.container-fluid -->
</nav>
<div class="background">
<div id="songshow">
<h1><%= @song.name %></h1>
<h3>Time Signature: <%= @song.key.tonic  %></h3>
<h3>Time Signature: <%= @song.time_signature.name  %></h3>
<h3> Tempo: <%= @song.tempo.bpm %> bpm</h3>
<p><a href="/songs/<%= @song.id %>/show_pdf.pdf" class="btn btn-default" role="button">View Lead Sheet</a> <a href="/chords/<%= @song.id %>/edit" class="btn btn-default" role="button">Edit Chords</a> </p>
</div>


