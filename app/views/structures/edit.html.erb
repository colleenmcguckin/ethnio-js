<div ng-controller="songsCtrl">
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="/songs"><%= image_tag "notebook-nav-icon.png", alt: "NoteBook" %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div >
      <ul class="nav navbar-nav page-navbar">
        <li><h2>Music</h2></li>
        
      </ul>
      
      <ul class="nav navbar-nav navbar-right">
        
        <li><%= link_to "Log Out", "/users/sign_out", method: :delete if current_user %></li>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="background">

<h1>Select Chords & Enter Lyrics</h1>

<div ng-controller="structureCtrl" ng-init="setId(<%= @song_id %>)">
<div id="chords_container">
  <div class="chord_div" ng-repeat="chord in chords">
    <div class="chord_div" >
      <select ng-model="chord" ng-options="key.tonic for key in keys"></select>
    </div> 

  </div>
  <div>
    <button ng-click="saveChords()"> Save Chords! </button>
  </div>
</div>

</div>